<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/Email_layout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Do you want your Email visible to others"
        android:textColor="#878787"
        android:textSize="19sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/setting_email"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/emailyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/emailno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"/>
    </RadioGroup>
    <TextView
        android:id="@+id/number_layout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Do you want your Phone visible to others"
        android:textColor="#878787"
        android:textSize="19sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/setting_phone"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/numberyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/numberno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"/>
    </RadioGroup>


    <!--<ImageView-->
    <!--android:id="@+id/imageToUpload"-->
    <!--android:layout_height="10dp"-->
    <!--android:layout_width="10dp" />-->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/setting_black_out"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint=""/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:weightSum="1">

        <Button
            android:id="@+id/setting_doneButton"
            android:text="Done"
            style="@style/NiceButton"
            android:layout_gravity="start"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="30dp"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:id="@+id/setting_cancelButton"
                style="@style/NiceButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:text="Cancel" />
        </LinearLayout>
    </LinearLayout>
>
</LinearLayout>
